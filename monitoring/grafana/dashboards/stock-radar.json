        {
          "expr": "stockradar_analysis_signal_total",
          "legendFormat": "{{signal}}"
        }
      ]
    },
    {
      "title": "Data Fetch Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(stockradar_data_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "{{provider}} - {{operation}} p95"
        }
      ]
    },
    {
      "title": "Cache Hit Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 },
